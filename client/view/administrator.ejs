<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Melvrick Goh">
    <link rel="icon" href="../img/favicon.png">

    <title>Service Login</title>

    <!-- Bootstrap core CSS -->
    <link href="../bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="../stylesheets/administrator-login.css" rel="stylesheet">
    <script src="http://mymaplist.com/js/vendor/TweenLite.min.js"></script>
    <!-- This is a very simple parallax effect achieved by simple CSS 3 multiple backgrounds, made by http://twitter.com/msurguy -->
  </head>

  <body>

  <div class="container">
      <div class="row vertical-offset-100">
        <div class="col-md-4 col-md-offset-4">
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">Service Account Sign-In</h3>
          </div>
            <div class="panel-body">
              <form action="/serviceadmin/login" accept-charset="UTF-8" role="form">
                      <fieldset>
                  <div class="form-group">
                    <%if(error==null ||error==undefined){%>
                      <input id="username" class="form-control" placeholder="Username" name="username" type="text">
                    <%}else{%>
                      <input id="username" class="form-control" placeholder="Username" name="username" type="text" value=<%=errorUsername%>>
                    <%}%>
                </div>
                <div class="form-group">
                  <input id="password" class="form-control" placeholder="Password" name="password" type="password" value="">
                </div>
                <%if(error==null ||error==undefined){%>
                <%}else{%>
                  <label><%=error%></label>
                <%}%>
                <input id="servicelogin" class="btn btn-lg btn-success btn-block" type="submit" value="Login">
              </fieldset>
                </form>
            </div>
        </div>
      </div>
    </div>
  </div>

    <!-- Bootstrap core JavaScript <script src="../../assets/js/docs.min.js"></script>
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="../bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript">
      $(document).ready(function(){
        /*$('#servicelogin').click(function(){
          var redirectURL = '/serviceadmin/login?username=' + $('#username').val() + '&password=' + $('password').val();
          window.location.href(redirectURL);
        });*/

        $(document).mousemove(function(e){
           TweenLite.to($('body'), 
              .5, 
              { css: 
                  {
                      backgroundPosition: ""+ parseInt(event.pageX/8) + "px "+parseInt(event.pageY/'12')+"px, "+parseInt(event.pageX/'15')+"px "+parseInt(event.pageY/'15')+"px, "+parseInt(event.pageX/'30')+"px "+parseInt(event.pageY/'30')+"px"
                  }
              });
        });
      });
    </script>
  </body>
</html>
